<script>

  //JavaScript to ToggleMenu
  function toggleMenu() {
    var subMenu = document.getElementById("subMenu");
    subMenu.classList.toggle("open-menu");
  }
  // AJAX to fetch user information
  window.addEventListener('DOMContentLoaded', (event) => {
    fetchUserInfo();
  });

  function fetchUserInfo() {
      fetch('/getUserInfo')
          .then(response => {
              if (!response.ok) {
                  throw new Error('Network response was not ok');
              }
              return response.json();
          })
          .then(data => {
              const userInfoDiv = document.getElementById('user-info1');
              userInfoDiv.innerHTML = `<img src="profile.png"><h3><b>Hello ${data.firstname} ${data.lastname} (${data.role})<b></h3>`;
          })
          .catch(error => console.error('Error fetching user information:', error));
  }

</script>


